{{ 'rdc_ambassador-hub.css' | asset_url | stylesheet_tag }}
<script src="{{ 'rdc_ambassador-hub.js' | asset_url }}" defer="defer"></script>

{%- liquid
  assign section_width = section.settings.section_width
  assign riddle_question = section.settings.riddle_question
  assign riddle_answer = section.settings.riddle_answer
  assign riddle_hint = section.settings.riddle_hint
  assign hub_title = section.settings.hub_title
  assign hub_subtitle = section.settings.hub_subtitle
-%}

<div class="section-ambassador-hub section-padding section-bg isolate" {% render 'section-properties' %} data-ambassador-hub>
  <div class="ambassador-hub {{ section_width }}" id="ambassador-hub-{{ section.id }}" data-id="{{ section.id }}">
    
    <!-- Password Overlay -->
    <div class="ambassador-hub__password-overlay" data-password-overlay>
      <div class="ambassador-hub__password-container">
        <div class="ambassador-hub__password-header">
          <h2 class="ambassador-hub__password-title">{{ section.settings.overlay_title }}</h2>
          <p class="ambassador-hub__password-subtitle">{{ section.settings.overlay_subtitle }}</p>
        </div>
        
        <div class="ambassador-hub__riddle">
          <p class="ambassador-hub__riddle-question">{{ riddle_question }}</p>
          {% if riddle_hint != blank %}
            <button class="ambassador-hub__hint-button" data-hint-button>Besoin d'un indice ?</button>
            <p class="ambassador-hub__riddle-hint" data-riddle-hint>{{ riddle_hint }}</p>
          {% endif %}
        </div>
        
        <div class="ambassador-hub__password-form">
          <div class="ambassador-hub__input-group">
            <input type="text" class="ambassador-hub__password-input" placeholder="Votre réponse" data-password-input>
            <button class="ambassador-hub__submit-button" data-submit-button>Valider</button>
          </div>
          <p class="ambassador-hub__error-message" data-error-message></p>
        </div>
      </div>
    </div>
    
    <!-- Main Content (Hidden until password is entered correctly) -->
    <div class="ambassador-hub__content" data-hub-content>
      <div class="ambassador-hub__header">
        <h2 class="ambassador-hub__title {{ section.settings.heading_size_section }}">{{ hub_title }}</h2>
        {% if hub_subtitle != blank %}
          <p class="ambassador-hub__subtitle">{{ hub_subtitle }}</p>
        {% endif %}
      </div>
      
      <div class="ambassador-hub__main">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'ambassador' %}
              <div class="ambassador-hub__ambassador" {{ block.shopify_attributes }}>
                <div class="ambassador-hub__ambassador-image">
                  {% if block.settings.ambassador_image != blank %}
                    {{ block.settings.ambassador_image | image_url: width: 300 | image_tag: 
                      loading: 'lazy',
                      class: 'ambassador-hub__image',
                      alt: block.settings.ambassador_name
                    }}
                  {% else %}
                    {{ 'image' | placeholder_svg_tag: 'ambassador-hub__image placeholder' }}
                  {% endif %}
                </div>
                <div class="ambassador-hub__ambassador-info">
                  <h3 class="ambassador-hub__ambassador-name">{{ block.settings.ambassador_name }}</h3>
                  {% if block.settings.ambassador_role != blank %}
                    <p class="ambassador-hub__ambassador-role">{{ block.settings.ambassador_role }}</p>
                  {% endif %}
                  {% if block.settings.ambassador_bio != blank %}
                    <div class="ambassador-hub__ambassador-bio">{{ block.settings.ambassador_bio }}</div>
                  {% endif %}
                  {% if block.settings.ambassador_social_link != blank %}
                    <a href="{{ block.settings.ambassador_social_link }}" class="ambassador-hub__ambassador-social" target="_blank" rel="noopener">
                      {% render 'icon-instagram' %}
                    </a>
                  {% endif %}
                </div>
              </div>
            {% when 'text' %}
              <div class="ambassador-hub__text-block" {{ block.shopify_attributes }}>
                {% if block.settings.heading != blank %}
                  <h3 class="ambassador-hub__text-heading">{{ block.settings.heading }}</h3>
                {% endif %}
                {% if block.settings.text != blank %}
                  <div class="ambassador-hub__text-content">{{ block.settings.text }}</div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize the ambassador hub password functionality
    const ambassadorHub = document.querySelector('[data-ambassador-hub]');
    if (ambassadorHub) {
      const correctAnswer = "{{ riddle_answer | escape }}";
      initAmbassadorHub(ambassadorHub, correctAnswer);
    }
  });
</script>

